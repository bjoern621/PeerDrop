    "version": "0.2.0",
    "configurations": [
        {
            "type": "node-terminal",
            "name": "Launch Vite",
            "request": "launch",
            "command": "npm run dev",
            "cwd": "${workspaceFolder}/frontend",
        },
        {
            "type": "msedge",
            "name": "Launch Firefox to localhost",
            "request": "launch",
            "runtimeExecutable": "/mnt/c/Program Files/Mozilla Firefox/firefox.exe",
            "url": "http://localhost:5173", // default Vite port!
            "webRoot": "${workspaceFolder}/frontend"
        }]
}
